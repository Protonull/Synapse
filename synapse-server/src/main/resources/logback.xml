<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{YYYY-MM-dd HH:mm:ss}] [%level] [%logger{36}] [%thread]: %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="gjum.minecraft.civ.synapse" level="${logger_level}" /> <!-- sets for all Synapse loggers -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
